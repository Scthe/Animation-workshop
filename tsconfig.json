{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "es6",
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": [
      "webpack-env"
    ],
    "baseUrl": "./src",
    "paths": {
      "ui/*": ["./ui/*"],
      "viewport/*": ["./viewport/*"],
      "gl-utils/*": ["./gl-utils/*"]
    }
  },
  "include": [
    "types/globals.d.ts",
    "types/gl-matrix.d.ts",
    "types/mobx-preact.d.ts",
    "./src"
  ],
  "exclude": [
    "references",
    "node_modules"
  ]
}
